<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DragAndDropSample.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Image HeightRequest="300" x:Name="DropImage"/>
            <Label Text="Drag and Drop a file on the window..." HorizontalOptions="Center" x:Name="DropFilename"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
